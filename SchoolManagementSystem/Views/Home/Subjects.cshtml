@{
    ViewData["Title"] = "Subjects";
    ViewBag.CurrentPage = "Subjects";
    var user = ViewData["user"];

}

<div>
    <h3 class=" text-lg-left">Available Subjects</h3>
    <br />
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="" id="inputSubArea">
                <b class="text">Search Subject&nbsp;:&nbsp;&nbsp;</b>
                <input type=text id="txtSearchSubject" class="txtSearch" placeholder="  Type Subject Name..." />
                <button id="btnSearchSubject" class="btn btn-primary"><span class="buttSearch glyphicon glyphicon-search" aria-hidden="true"></span></button>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-lg-12">
            <div class="k-grid" id="subjectsGrid"></div>
        </div>
    </div>
</div>

<style type="text/css">
    #inputSubArea, .k-grid {
        font-family: Arial, 'Karla','Poppins', sans-serif;
    }

    /* Hide the Grid header and pager during export */
    .k-pdf-export .k-grid-toolbar,
    .k-pdf-export .k-pager-wrap {
        display: none;
    }

    #subjectsGrid {
        font-size: 11px;
    }
</style>
<section>
    <script src="~/js/custom/Subject.js"></script>
</section>